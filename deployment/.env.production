# NaviMED Healthcare Platform - Production Environment Configuration
# Copy this file to /httpdocs/.env on your Plesk server

# Application Environment
NODE_ENV=production
PORT=5000

# Database Configuration (Required)
# Replace with your actual PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/navimed_db

# JWT Configuration (Required)
# Generate a secure random string for production
JWT_SECRET=your_secure_jwt_secret_key_minimum_32_characters_long_please_change_this

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@navimedi.org

# Payment Processing (Stripe - Optional)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Security Configuration
CORS_ORIGIN=https://navimedi.org,https://www.navimedi.org
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key_different_from_jwt_secret

# Application Configuration
APP_NAME=NaviMED Healthcare Platform
APP_VERSION=2.1.0
APP_DOMAIN=navimedi.org

# Healthcare Compliance
HIPAA_COMPLIANT=true
AUDIT_LOGGING=enabled
DATA_ENCRYPTION=enabled

# Platform Features
MULTI_TENANT=enabled
WHITE_LABEL=enabled
SUPER_ADMIN_EMAIL=abel@argilette.com

# Performance Configuration
MAX_UPLOAD_SIZE=50mb
REQUEST_TIMEOUT=30000
CONNECTION_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_ERRORS=true
LOG_REQUESTS=false

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30